<form action='/qadeer' method='post' enctype="multipart/form-data">

    <table class="table table-bordered">
        <thead>

            <tr>
                <td>DAY</td>
                <td>
                    WORKING DAY
                </td>
                <td>
                    WORKING HOURS
                </td>
                <td>DATE</td>
                <td> TOTAL DAY</td>
                <td> LABOUR PAY</td>
