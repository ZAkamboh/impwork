                <td> HOURS RATE total</td>
                <td> grand total</td>
                <td> kharacha</td>
                <td> previous</td>




            </tr>


            <tr>
                <td>MONDAY</td>
                <td>
                    <input type="text" value="P-" class="form-control">
                </td>
                <td>
                    <input type="text" id="hours" class="form-control" onblur="getHO(this.value)">
