
<h1> EDIT FORM </h1>

{{#if  success_message}}
<div class='alert alert-success'> {{success_message}}</div>

{{/if}}




<form action='/admin/posts/edit/{{posts.id}}?_method=PUT' method='post' enctype="multipart/form-data">
    <div class='form-group'>
        <label for="title">title </label>
        <input name="title" type="text" class="form-control" id="title" value="{{posts.title}}">
    </div>
    <div class='form-group'>
        <label for="file">upload file</label>
        <input name="file" type="file" class="form-control"   >
    </div>


    <div class='form-group'>
       <label for="status">status </label>
            <select name='status' id='status' class='form-control'>
                 <option value='public'>public </option>
                 <option value='private'>private </option>
                 <option value='draft'>draft </option>
            </select>

    </div>
    <div class='form-check'>
        <label for="allowcomments">

    <input name="checkbox" type="checkbox"       class="form-check" id="allowcomments" >
            Allow Comments


        </label>
    </div>

    <div class='form-group'>
        <label for="body">body </label>
        <textarea name="body" type="text" class="form-control" cols="30" rows="10" id="title" >{{posts.body}} </textarea>
    </div>



<button type="submit" class="btn btn-success">submit </button>
</form>
